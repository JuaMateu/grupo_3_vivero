<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <title>Registrate</title>
    </head>
<body>
    <%- include('../partials/header') %>
    <!-- Aca va el cuerpo la pagina -->
    <main>
        <section class="flex-column media-flex-row">
            <div class="auto-flex">
                <!-- Aqui va el texto principal de la pagina -->
                <h1 class="users__title">Crear Cuenta</h1>
                <!-- Seccion de pregunta de sign up -->
                <div class="users__subtitle">
                    <h4>¿Ya tenés cuenta?</h4>
                    <a href="/users/login" class="users__link">Iniciá sesión</a>
                </div>
            </div>
            <div class="auto-flex">
                <!-- Iniciamos el formulario de sign up -->
                <form action="/users/register" method="post" class="users__form">
                    <!-- Ingresar el nombre -->
                    <div class="users__form--item">
                        <label class="users__form--label" for="firstName">Nombre</label>
                        <input class="users__form--input" name="firstName" type="text" placeholder="Ingresá tu nombre" minlength="3"
                            maxlength="20" required>
                    </div>
                    <!-- Ingresar el apellido -->
                    <div class="users__form--item">
                        <label class="users__form--label" for="lastName">Apellido</label>
                        <input class="users__form--input" name="lastName" type="text" placeholder="Ingresá tu apellido" minlength="3"
                            maxlength="20" required >
                    </div>
                    <!-- Ingresar el correo electrónico -->
                    <div class="users__form--item">
                        <label class="users__form--label" for="email"> Correo electrónico</label>
                        <input class="users__form--input" name="email" type="email" placeholder="Ingresá correo" required>
                    </div>
                    <!-- Ingresar la contraseña -->
                    <div class="users__form--item">
                        <label class="users__form--label" for="password">Contraseña</label>
                        <input class="users__form--input" type="password" placeholder="Ingresá contraseña" required>
                    </div>
                    <!-- Repetir la contraseña -->
                    <div class="users__form--item">
                        <label class="users__form--label" for="passwordCheck">Repeti tu contraseña</label>
                        <input class="users__form--input" name="passwordCheck" type="password" placeholder="Ingresá contraseña" required>
                    </div>
                    <!-- Boton de iniciar sesion -->
                    <input type="submit" value="Creá tu cuenta" class="btnStyle2">
                </form>
    
            </div>
    
    
        </section>
    
    </main>

    <!-- aca arranca el footer -->
    <%- include('../partials/footer') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <title>Registrate</title>
    </head>
<body>
    <%- include('../partials/header') %>
    <!-- Aca va el cuerpo la pagina -->
    <main>
        <section class="flex-column media-flex-row">
            <div class="auto-flex">
                <!-- Aqui va el texto principal de la pagina -->
                <h1 class="users__title">Crear Cuenta</h1>
                <!-- Seccion de pregunta de sign up -->
                <div class="users__subtitle">
                    <h4>¿Ya tenés cuenta?</h4>
                    <a href="/users/login" class="users__link">Iniciá sesión</a>
                </div>
            </div>
            <div class="auto-flex">
                <!-- Iniciamos el formulario de sign up -->
                <form action="/users/register" method="post" class="users-form">
                    <!-- Ingresar el nombre -->
                    <div class="users-form__field">
                        <label class="users-form__label" for="firstName">Nombre</label>
                        <input class="users-form__input" 
                            name="firstName"   
                            type="text" 
                            placeholder="Ingresá tu nombre" 
                            minlength="3"
                            maxlength="20" 
                            value="<%= locals.oldData ? oldData.firstName : null %>"
                            
                        >
                        <% if (locals.errors && errors.firstName) { %>
                            <div class="text-danger">
                                <%= errors.firstName.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Ingresar el apellido -->
                    <div class="users-form__field">
                        <label class="users-form__label" for="lastName">Apellido</label>
                        <input class="users-form__input" 
                            name="lastName" 
                            type="text" 
                            placeholder="Ingresá tu apellido" 
                            minlength="3"
                            maxlength="20" 
                            value="<%= locals.oldData ? oldData.lastName : null %>"
                        >
                        <% if (locals.errors && errors.lastName) { %>
                            <div class="text-danger">
                                <%= errors.lastName.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Ingresar el correo electrónico -->
                    <div class="users-form__field">
                        <label class="users-form__label" for="email"> Correo electrónico</label>
                        <input class="users-form__input" 
                            name="email" 
                            type="email" 
                            placeholder="Ingresá correo" 
                            value="<%= locals.oldData ? oldData.email : null %>"
                        >
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Ingresar la contraseña -->
                    <div class="users-form__field">
                        <label class="users-form__label" for="password">Contraseña</label>
                        <input class="users-form__input" 
                            type="password" 
                            placeholder="Ingresá contraseña" 
                        
                        >
                        <% if (locals.errors && errors.password) { %>
                            <div class="text-danger">
                                <%= errors.password.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Repetir la contraseña -->
                    <div class="users-form__field">
                        <label class="users-form__label" for="passwordCheck">Repeti tu contraseña</label>
                        <input class="users-form__input" 
                            name="passwordCheck" 
                            type="password" 
                            placeholder="Ingresá contraseña" 
                            
                        >
                        <% if (locals.errors && errors.passwordCheck) { %>
                            <div class="text-danger">
                                <%= errors.passwordCheck.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Boton de iniciar sesion -->
                    <input class="btnStyle2" 
                        type="submit" 
                        value="Creá tu cuenta"
                    >
                </form>
    
            </div>
    
    
        </section>
    
    </main>

    <!-- aca arranca el footer -->
    <%- include('../partials/footer') %>
</body>
</html>
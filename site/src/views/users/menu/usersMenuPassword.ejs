<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/head') %>
        <title>Menu usuario</title>
    </head>
<body>
    <%- include('../../partials/header') %>
    <!-- Aca va el cuerpo la pagina -->
    <main>
        <div class="user-menu-header">
            <img src="<%- user.img %> " alt="imagen de usuario" class="user-menu__img">
            <!-- Aqui va el texto principal de la pagina -->
            <h1 class="user-menu__title">Bienvenido <%- user.firstName + " " + user.lastName %> </h1>
        </div>

        <div class='flex-column-to-RowDekstop'>

            <%- include('../../partials/userMenuNav.ejs') %>
            <div class="auto-flex">
                <!-- Iniciamos el formulario de sign up -->
                <form action="/users/menu/password/?_method=PUT " method="POST" class="users-form">
                    <!-- Ingresar el nombre -->
                    <div class="users-form__field">
                        <label class="users-form__label" for="actualPass">Password actual</label>
                        <input class="users-form__input" name="actualPass" type="password"
                            placeholder="Ingresá tu pass actual"  minlength="3" maxlength="20" required>
                    </div>
                    <div class="users-form__field">
                        <label class="users-form__label" for="newPass">Nueva password</label>
                        <input class="users-form__input" name="newPass" type="password"
                            placeholder="Ingresá tu nueva password"  minlength="3" maxlength="20" required>
                    </div>
                    <div class="users-form__field">
                        <label class="users-form__label" for="newPassCheck">Repetí la contraseña</label>
                        <input class="users-form__input" name="newPassCheck" type="password"
                            placeholder="Repetí tu nueva pass"  minlength="3" maxlength="20" required>
                    </div>
                    <!-- Boton de iniciar sesion -->
                    <input type="submit" value="Actualizar" class="btnStyle2">
                </form>

            </div>
    </div>
    
    </main>

    <!-- aca arranca el footer -->
    <%- include('../../partials/footer') %>
</body>
</html>
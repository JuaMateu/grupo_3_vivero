<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Head menos title -->
    <%- include('../partials/head') %>
    <title>Administrator Menu</title>
</head>
<body>
    
    <!-- Sidebar -->
    <div class="sidebar-admin">
        <h3 class="sidebar-menu"><i class="icon" id="logo-2"></i><span>PlantaSusi</span></h3>
        <a href="#" class="sidebar-items-admin"><i class="fa-solid fa-users-gear"></i><span>Usuarios</span></a>
        <a href="#" class="sidebar-items-admin"><i class="fa-solid fa-box-archive"></i><span>Productos</span></a>
        <a href="#" class="sidebar-items-admin"><i class="fa-solid fa-chart-simple"></i><span>Estadisticas</span></a>
    </div>

    <!-- Top-bar -->
    <header class="header-admin">
        <div class="menu-admin">
            <i class="fa-solid fa-bars"></i><span>Menu</span></i>
        </div>

        <div class="user-admin">
            <img src="/img/otros/user.png" alt="" height="20px" width="20px">
            <div>
                <h5>Admin name</h5>
            </div>
        </div>
    </header>
    <!-- Page content -->
    <div class="page-content-admin">
        <h1>Bienvenido Administrador</h1>
        <h3>Agregar o editar articulos</h3>

        <div class="control-form-admin">
            <form action="" method="post" class="form-admin">
                <div class="label-admin">
                    <label for="product-text">Ingresa el nombre del producto</label>
                    <input type="text" id="product-text" placeholder="Ingresa el nombre del producto" minlength="4" maxlength="20">
                </div>
                <div class="label-admin">
                    <label for="product-clasf">Ingresa la categoría</label>
                    <input type="text" id="product-clasf" placeholder="Ingresa la categoría del producto" minlength="4" maxlength="20" required>
                </div>
                <div class="label-admin">
                    <label for="product-color">Ingresa el color del producto</label>
                    <input type="text" id="product-color" placeholder="Ingresa el color del producto" minlength="4" maxlength="20">
                </div>
                <div class="label-admin">
                    <label for="product-care">Selecciona el cuidado del producto</label>
                    <input type="text" id="product-care" placeholder="Ingresa el cuidado del producto" minlength="4" maxlength="20">
                </div>
                <div class="label-admin">
                    <label for="product-description">Ingresa la descripcion del producto</label>
                    <textarea class="textarea-admin" name="product-description" id="product-description" cols="25" rows="4" placeholder="Ingresa la descripcion del articulo"></textarea>
                </div>
                <div class="label-admin">
                    <label for="product-image">Selecciona la imagen para el producto</label>
                    <input type="file" id="product-image" accept="/image*">
                </div>
                <div class="label-admin">
                    <label for="product-price">Ingresa el precio del producto a adicionar al inventario</label>
                    <input type="number" id="product-price" min="500" max="100000" value="500" step=100>
                </div>
                <div class="label-admin">
                    <label for="product-size">Ingresa el tamaño del articulo en cm</label>
                    <input type="number" id="product-size" min="50" max="100" value="50">
                </div>
                <div class="buttons-form-admin">
                    <div class="button-admin">
                        <input class="boton-login" type="reset" value="Limpiar formulario">
                    </div>
                    <div class="button-admin">
                        <input class="boton-login" type="submit" value="Agregar">
                    </div>
                    <div class="button-admin">
                        <input class="boton-login" type="submit" value="Editar">
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
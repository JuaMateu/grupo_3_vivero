<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Head -->
    <%- include('./partials/head') %>
  </head>
  <body>
    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Main -->
    <main>
      <section class="cart" data-user="<%= user.id %>">
        <div class="cart__title">
          <div>Carrito De Compras</div>
        </div>
        <div class="cart__header">
          <div class="cart__header-column--1">Producto</div>
          <div class="cart__header-column--2">Precio</div>
          <div class="cart__header-column--3">Cantidad</div>
          <div class="cart__header-column--4">Subtotal</div>
        </div>
        <form
          id="cart-form"
          name="cart-form"
          class="cart__form"
          action="/api/products/purchase"
          method="POST"
        >
          <div class="cart__form-left-column">
            <select
              name="payment-method"
              type="text"
              class="cart__payment-method"
            >
              <option value="1">Efectivo</option>
              <option value="2">Tarjeta De Crédito</option>
              <option value="3">Tarjeta De Débito</option>
            </select>
            <i class="fa-solid fa-chevron-down cart__payment-method-icon"></i>
          </div>
          <div class="cart__form-right-column">
            <div class="cart__total-placeholder"></div>
            <div class="cart__form-button-section">
              <button type="button" class="cart__button cart__return-button">
                Volver
              </button>
              <button type="submit" class="cart__button cart__proceed-button">
                Proceder
              </button>
            </div>
          </div>
        </form>
      </section>
    </main>

    <!-- Footer -->
    <%- include('./partials/footer') %>

    <!-- Script -->
    <script src="/js/cartList.js"></script>
    <script src="/js/cartPurchase.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Head menos title -->
    <%- include('../partials/head') %>
    <title>Agregar Usuarios</title>
</head>
<body>
    <%- include('../partials/header') %>
    <!-- Sidebar -->
    <%- include('../partials/sidebarAdmin') %>

    <!-- Page content -->
    <div class="admin">
        <%- include('../partials/adminUsersNav') %>
        
        <!-- Titulo -->
        <h1 class="adminMenu__title">Administrar Usuarios</h1>

        <form action="/users/create" method="post" enctype="multipart/form-data" class="admin__form">
            
            <!-- contenedor Grid -->
            <div class="admin-form__conteiner">

                <!-- subtitulo / accion -->
                <h3 class="span-2" >Agregá los usuarios a la base de datos</h3>

                <div class="adminForm__inputConteiner <%= locals.errors && errors.firstName ? "inputFailure" : "" %>">
                    <label class="admin-form__label" for="firstName">Ingresá tu nombre</label>
                    <input 
                        class="admin__input" 
                        name="firstName" 
                        type="text" 
                        id="firstName" 
                        placeholder="Nombre" 
                        value="<%= locals.oldData ? oldData.firstName : null %>"
                    >

                    <% if (locals.errors && errors.firstName) { %>
                        <div class="text-danger">
                            <%= errors.firstName.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="adminForm__inputConteiner <%= locals.errors && errors.lastName ? "inputFailure" : "" %>">
                    <label class="admin-form__label" for="lastName">Ingresá tu apellido</label>
                    <input 
                        class="admin__input" 
                        name="lastName" 
                        type="text" 
                        id="lastName" 
                        placeholder="Apellido" 
                        value="<%= locals.oldData ? oldData.lastName : null %>"
                    >

                    <% if (locals.errors && errors.lastName) { %>
                            <div class="text-danger">
                                <%= errors.lastName.msg %> 
                            </div>
                    <% } %>
                </div>
                <div class="adminForm__inputConteiner <%= locals.errors && errors.email ? "inputFailure" : "" %>">
                    <label class="admin-form__label" for="email">Ingresá tu email</label>
                    <input 
                        class="admin__input" 
                        name="email" 
                        type="email" 
                        id="email" 
                        placeholder="Email" 
                        value="<%= locals.oldData ? oldData.email : null %>"
                    >

                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="adminForm__inputConteiner <%= locals.errors && errors.password? "inputFailure" : "" %>">
                    <label class="admin-form__label" for="password">Ingresá tu Password</label>
                    <input 
                        class="admin__input" 
                        name="password" 
                        type="password" 
                        id="password" 
                        placeholder="Password" 
                    >
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger">
                            <%= errors.password.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="adminForm__inputConteiner <%= locals.errors && errors.mobile? "inputFailure" : "" %>">
                    <label class="admin-form__label" for="mobile">Ingresá tu número telefónico</label>
                    <input 
                        class="admin__input" 
                        name="mobile" 
                        type="number" 
                        id="mobile" 
                        placeholder="Teléfono" 
                        value="<%= locals.oldData ? oldData.mobile: null %>"
                    >

                        <% if (locals.errors && errors.mobile) { %>
                            <div class="text-danger">
                                <%= errors.mobile.msg %> 
                            </div>
                        <% } %>
                </div>

                <div class="adminForm__inputConteiner <%= locals.errors && errors.birth? "inputFailure" : "" %>">
                    <label class="admin-form__label" for="birth">Ingresá tu fecha de nacimiento</label>
                    <input 
                        class="admin__input" 
                        name="birth" 
                        type="date" 
                        id="birth" 
                        placeholder="Ingresá tu fecha de nacimiento" 
                        value="<%= locals.oldData ? oldData.birth : null %>"
                    >

                    <% if (locals.errors && errors.birth) { %>
                        <div class="text-danger">
                            <%= errors.birth.msg %> 
                        </div>
                    <% } %>
                </div>
                <div class="adminForm__inputConteiner">
                    <label class="admin-form__label" for="avatar-image">Seleccioná tu foto de usuario</label>
                    <input class="admin__input" id="fieldInput" name="img" accept='.jpg, .png' type="file" id="avatar-image" accept="/image*">
                </div>

                

                <div class="grid-1-start">
                    <input class="admin__buttons--input btnStyle2" type="reset" value="Limpiar formulario">
                </div>
                <div>
                    <input class="admin__buttons--input btnStyle2" type="submit" value="Agregar">
                </div>

            </div>
        </form>
    </div>
</body>
</html>
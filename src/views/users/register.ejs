<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <title>Registrate</title>
    </head>
<body>
    <%- include('../partials/header') %>
    <!-- Aca va el cuerpo la pagina -->
    <main>
        <section class="flex-column media-flex-row">
            <div class="auto-flex users-header">
                <!-- Aqui va el texto principal de la pagina -->
                <h1 class="users__title">Crear Cuenta</h1>
                <!-- Seccion de pregunta de sign up -->
                <div class="users__subtitle">
                    <h4>¿Ya tenés cuenta?</h4>
                    <a href="/users/login" class="users__link">Iniciá sesión</a>
                </div>
            </div>
            <div class="auto-flex users-form-conteiner">
                <!-- Iniciamos el formulario de sign up -->
                <form id="users-form" action="/users/register" method="post" class="users-form">
                    <!-- Ingresar el nombre -->
                    <div id="div-1" class="users-form__field <%= locals.errors && errors.firstName ? "inputFailure" : "" %>">
                        <label class="users-form__label" for="firstName">Nombre</label>
                        <input
                            id = "firstName" 
                            class = "users-form__input" 
                            name = "firstName"   
                            type = "text" 
                            placeholder="Ingresá tu nombre" 
                            value="<%= locals.oldData ? oldData.firstName : null %>"
                        />
                        <i class="fa-solid fa-circle-check"></i>
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <% if (locals.errors && errors.firstName) { %>
                            <div class="text-danger">
                                <%= errors.firstName.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Ingresar el apellido -->
                    <div id="div-2" class="users-form__field <%= locals.errors && errors.lastName ? "inputFailure" : "" %>">
                        <label class="users-form__label" for="lastName">Apellido</label>
                        <input 
                            id = "lastName" 
                            class = "users-form__input"  
                            name = "lastName" 
                            type = "text" 
                            placeholder="Ingresá tu apellido" 
                            value="<%= locals.oldData ? oldData.lastName : null %>"
                        />
                        <i class="fa-solid fa-circle-check"></i>
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <% if (locals.errors && errors.lastName) { %>
                            <div class="text-danger">
                                <%= errors.lastName.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Ingresar el correo electrónico -->
                    <div id="div-3" class="users-form__field <%= locals.errors && errors.email ? "inputFailure" : "" %>">
                        <label class="users-form__label" for="email"> Correo electrónico</label>
                        <input 
                            id = "email" 
                            class = "users-form__input"  
                            name = "email" 
                            type = "email" 
                            placeholder="Ingresá correo" 
                            value="<%= locals.oldData ? oldData.email : null %>"
                        />
                        <i class="fa-solid fa-circle-check"></i>
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Ingresar la contraseña -->
                    <div id="div-4" class="users-form__field <%= locals.errors && errors.password? "inputFailure" : "" %>">
                        <label class="users-form__label" for="password">Contraseña</label>
                        <input 
                            id = "password" 
                            class = "users-form__input"  
                            name = "password"
                            type = "password" 
                            placeholder="Ingresá contraseña" 
                        />
                        <i class="fa-solid fa-circle-check"></i>
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <% if (locals.errors && errors.password) { %>
                            <div class="text-danger">
                                <%= errors.password.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Repetir la contraseña -->
                    <div id="div-5" class="users-form__field <%= locals.errors && errors.passwordCheck ? "inputFailure" : "" %>">
                        <label class="users-form__label" for="passwordCheck">Repeti tu contraseña</label>
                        <input 
                            id = "passwordCheck" 
                            class = "users-form__input"  
                            name = "passwordCheck" 
                            type = "password" 
                            placeholder="Ingresá contraseña" 
                        />
                        <i class="fa-solid fa-circle-check"></i>
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <% if (locals.errors && errors.passwordCheck) { %>
                            <div class="text-danger">
                                <%= errors.passwordCheck.msg %> 
                            </div>
                        <% } %>
                    </div>
                    <!-- Boton de iniciar sesion -->
                    <div class="user-menu__confirmation-button">
                        <input type="submit" value="Actualizar" class="btnStyle2">
                    </div>
                </form>
            </div>
        </section>
    </main>
    <!-- aca arranca el footer -->
    <%- include('../partials/footer') %>
    <script src="/js/register.js"></script>
</body>
</html>
